<%= form_with(model: contact) do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
        <% contact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name,class:"form-control",placeholder:"Enter first name" %>
  </div>

  <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name,class:"form-control",placeholder:"Enter last name" %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email,class:"form-control",placeholder:"Enter email" %>
  </div>

  <div class="form-group">
    <%= form.label :phone %>
    <%= form.text_field :phone,class:"form-control",placeholder:"Enter phone" %>
  </div>

  <div class="form-group">
    <%= form.label :twitter %>
    <%= form.text_field :twitter,class:"form-control",placeholder:"Enter twitter link" %>
  </div>

  <div class="form-group">
    <%= form.number_field :user_id,value: current_user.id,type: :hidden ,class:"form-control",placeholder:"Enter twitter link" %>
  </div>

  <div class="actions my-3">
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
