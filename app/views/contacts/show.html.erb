<div class="card">
<div class="card-body">
<h4 class="card-title"> <%= @contact.first_name %> <%= @contact.last_name %></h4>
<p class="card-text"><%= @contact.email %></p>
<p class="card-text"><%= @contact.phone %></p>
<p class="card-text"> <%= @contact.twitter %></p>
<%= link_to 'Destroy', @contact, method: :delete, data: { confirm: 'Are you sure?' },class:'mytext btn btn-danger' %> 

<button class="btn btn-secondary">
<%= link_to 'Edit', edit_contact_path(@contact),class:'mytext' %>
</button>

<%= link_to 'Back', contacts_path,class:'mytext btn btn-secondary' %>
</div>
</div>


